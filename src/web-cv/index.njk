---
layout: page
title: Web-CV
---
<div id="web-cv-page">
    <h2 class="text-center">Web CV</h2>
    {# --------------- Intro Section --------------- #}
    <section id="cv-intro" class="text-center">
        {% for social, socialUrl in cvData.socialMedia %}
            <a href="{{ socialUrl }}" target="_blank" class="px-4">
                {{ social }}
            </a>
        {% endfor %}
        <p class="fst-italic">
            Senior majoring in Computer Science with a concentration in Economics. I am interested in Machine Learning, 
            Web Development, and Education Technology.
        </p>
    </section>
    {# --------------- Education Section --------------- #}
    <section id="cv-education" class="cv-section">
        <h3 class="text-primary">Education</h3>
        <div class="cv-item">
            <strong>Massachusetts Institute of Technology</strong>
            <br />
            <em>Candidate for Bachelor's in Science in Computer Science | GPA: 5/5</em>
            <section id="cv-coursework">
                <h4 class="text-primary">CourseWork</h4>
                <ul>
                    {% for semester in cvData.education.courseWork %}
                        <li class="subsection-item">
                            <strong> {{ semester.title }} </strong>
                            <br />
                            <em> {{ semester.courses }} </em>
                        </li>
                    {% endfor %}
                </ul>
            </section>
    </section>
    {# --------------- Work Experience Section --------------- #}
    <section id="cv-experience" class="cv-section">
        <h3 class="text-primary">Work Experience</h3>
        <div class="cv-section-content">
        {% for item in cvData.experience %}
            <div class="cv-item">
                <strong>{{ item.title }}</strong>
                <br />
                <em>{{ item.summary }}</em>
                <ul>
                    {% for point in item.description %}
                        <li>{{ point }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
        </div>
    </section>
    {# --------------- Other Activities Section --------------- #}
    <section id="cv-involvements" class="cv-section">
        <h3 class="text-primary">Other Involvements</h3>
        <div class="cv-section-content">
        {% for item in cvData.involvements %}
            <div class="cv-item">
                <strong>{{ item.title }}</strong>
                <br />
                <em>{{ item.summary }}</em>
                <ul>
                    {% for point in item.description %}
                        <li>{{ point }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
        </div>
    </section>
    {# --------------- Other Activities Section --------------- #}
    <section id="cv-skills" class="cv-section">
        <h3 class="text-primary">Technical Skills</h3>
        <div class="cv-section-content">
        {% for category in cvData.skills %}
            <div class="cv-skill-cat d-flex flex-column flex-sm-row align-items-sm-center">
                <h4 class="m-0">{{ category.title }}</h4>
                <div class="skill-list">
                    {% for item in category.specifics %}
                    <span class="cv-skill">
                        <a>{{ item.title }}</a>
                        {% if 'level' in item %}
                        <sub class="fst-small fst-italic">{{ item.level }}</sub>
                        {% endif %}
                    </span>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        </div>
    </section>
</div>